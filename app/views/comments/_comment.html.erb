<%= form_for Comment.new do |f| %>
 	<%= f.hidden_field :commentor_id, :value => current_user.id %>
	<%= f.hidden_field :date_filed, :value => DateTime.now.to_date %>
	<% @users.each do |u| %>
		<%= f.hidden_field :user_id, :value => params[:id] %>
	<% end %>
	<%= f.label :comment %><br />
	<%= f.text_area :comment %><br />
	<%= f.submit %>
<% end %>
