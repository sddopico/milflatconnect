<% if user_signed_in? %>
	<h1>Welcome <%= current_user.fullname %></h1>
	<h1>Flats</h1>
	<% @flats.each do |flat| %>   
		<%= link_to flat.tagline, home_path(:id => flat.id) %><br />
		<%= flat.available_date.strftime("%b %d") %><br />
		<%= flat.address %><br />
		<%= flat.city %><br />
		<%= flat.base %><br />
		<%= flat.description %><br />
		<%= flat.bedroom %><br />
		<%= flat.bathroom %><br />
		<%= flat.price %><br />
		<%= flat.sec_deposit %><br />
		<%= flat.cleaning_fee %><br />
		<%= flat.house_rules %><br />
		<%= flat.photos %><br />
		<%= flat.user.fullname %><br />
		<%= link_to 'Edit', edit_flat_path(flat) %>
		<%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %>        	
	<% end %>
<% else %>
	<h1>Welcome</h1>
<% end %>
